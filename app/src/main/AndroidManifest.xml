<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.example.todoapplication.MyApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Base.Theme.ToDo"
        tools:targetApi="31">
        <activity
            android:name="com.example.todoapplication.SplashActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.ToDo.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.todoapplication.ui.home.HomeActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.ToDo"/>
    </application>

</manifest>